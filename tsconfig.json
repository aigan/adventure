{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "ES2024",
    "module": "ES2022",
    "moduleResolution": "node",
    "strict": true,

    // Additional checks beyond strict mode
    "noImplicitReturns": true,         // All code paths must return
    "noFallthroughCasesInSwitch": true, // Prevent accidental fallthrough

    // Uncomment for stricter unused variable checking:
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
  },
  "include": [
    "public/worker/**/*.mjs"
  ],
  "exclude": [
    "node_modules",
    "public/worker/session.mjs"
  ]
}
